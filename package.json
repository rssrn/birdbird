{
  "name": "birdbird-lint",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "npx serve -l 3000 src/birdbird/templates",
    "test:a11y": "EXIT=0; for f in src/birdbird/templates/*.html; do pa11y http://localhost:${PORT:-3000}/$(basename $f) || EXIT=1; done; exit $EXIT"
  },
  "devDependencies": {
    "@cspell/dict-en-gb": "^5.0.0",
    "@double-great/stylelint-a11y": "^3.0.2",
    "cspell": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-html": "^8.0.0",
    "html-validate": "^9.0.0",
    "pa11y": "^8.0.0",
    "postcss-html": "^1.7.0",
    "serve": "^14.0.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^37.0.0"
  }
}
